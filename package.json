{
  "name": "vite-typescript-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "vite",
    "build": "NODE_ENV='production' tsc && vite build",
    "preview": "npm run build -- --watch && vite preview",
    "check": "npm-run-all check:**",
    "check:prettier": "prettier . --check",
    "check:lint": "eslint",
    "fix": "npm-run-all fix:**",
    "fix:lint": "eslint ./src/ --fix",
    "fix:prettier": "prettier ./src/ --write",
    "publish": "npm run build && gh-pages -d dist",
    "prepare": "husky",
    "graph": " madge --image graph.svg ./src/main.ts --exclude '^levels/.*\\.ts'",
    "docs": "npm-run-all docs:**",
    "docs:effects": "mdextract ./src/modules/effects.ts > ./docs/effects.md",
    "docs:components": "mdextract ./src/classes/components.ts > ./docs/components.md"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@json2csv/plainjs": "^7.0.6",
    "@mapeditor/tiled-api": "^1.11.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "gh-pages": "^6.2.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "madge": "^8.0.0",
    "mdextract": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "3.4.2",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5",
    "vite-plugin-pwa": "^0.21.1"
  },
  "dependencies": {
    "@kayahr/tiled": "^0.0.1",
    "@types/stats.js": "^0.17.3",
    "gamecontroller.js": "^1.5.0",
    "lil-gui": "^0.20.0",
    "mini-signals": "^2.0.0",
    "nipplejs": "^0.10.2",
    "rot-js": "^2.2.1",
    "stats.js": "^0.17.0",
    "ts-dedent": "^2.2.0",
    "zzfx": "^1.3.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  }
}
